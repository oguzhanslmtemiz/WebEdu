<%- include('partials/_head') %>

<body class="sub_page">
  <div class="hero_area">
    <%- include('partials/_header') %>
  </div>

  <!-- course section -->

  <section class="course_section layout_padding">
    <div class="side_img">
      <img src="/images/side-img.png" alt="" />
    </div>
    <div class="container">
      <div class="heading_container">
        <h3>
          POPULAR COURSES
        </h3>
        <p>
          It is a long established fact that a reader will be distracted
        </p>
      </div>
      <div class="categories">
        <div class="row">
          <div class="col-xl-12">
            <div class="course_nav">
              <nav>
                <ul class="nav" role="tablist">
                  <li class="nav-item">
                    <a class="nav-link <%= categorySlug == null && 'active' %>" href="/courses" role="tab"
                      aria-controls="courses" aria-selected="true">All Courses</a>
                  </li>
                  <% for (let i=0; i< categories.length; i++) { %>
                  <li class="nav-item">
                    <a class="nav-link <%= categorySlug === categories[i].slug && 'active' %>"
                      href="/courses?categories=<%= categories[i].slug %>" role="tab"
                      aria-controls="<%= categories[i].slug %>" aria-selected="false"><%= categories[i].name %></a>
                  </li>
                  <% } %>
                </ul>
              </nav>
            </div>
          </div>
        </div>
      </div>
      <div class="course_container">
        <div class="course_content">
          <% for (let i = 0; i < courses.length; i++) { %>
          <div class="box">
            <img src="/images/c-2.jpg" alt="" />
            <a href="/courses/<%= courses[i].slug %>" class="">
              <img src="/images/link.png" alt="" />
            </a>
            <h5> <%= courses[i].name %> </h5>
          </div>
          <% } %>
        </div>
      </div>
      <div class="btn-box">
        <a href="">
          Read More
        </a>
      </div>
    </div>
  </section>

  <!-- end course section -->
  <%- include('partials/_footer') %>